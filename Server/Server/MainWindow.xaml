        <TextBox Name="receive_msg" HorizontalAlignment="Left" Height="275" Margin="70,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="392"/>
        
        <Button Content="Start Server" HorizontalAlignment="Left" Margin="511,107,0,0" VerticalAlignment="Top" Height="110" Width="185" Click="Start"/>
